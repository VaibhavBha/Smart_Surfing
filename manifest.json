{  
    "name": "Smart Surfing",
    "version": "1.0",  
    "description": "Smart Surfing",  
    "permissions": ["activeTab", "declarativeContent", "storage","contextMenus","<all_urls>"],
    "browser_action": {  
        "default_popup": "dist/index.html"  
    },
    "web_accessible_resources": ["images/svgs/transl.svg","images/svgs/addnote.svg","images/svgs/rating.svg","images/svgs/dictionary.svg","images/svgs/currency.svg","images/svgs/imdb.svg","images/svgs/stocks.svg","images/svgs/price.svg","images/svgs/unitconvert.svg"],
    "content_scripts":[{
        "matches":["<all_urls>"],
        "css": ["dist/style.css"],
        //"js":["popup.js","currency.js"],
        "js":["dist/main.js"],
        "run_at": "document_end",
        "all_frames": true
    }],  
    "manifest_version": 2  
  }